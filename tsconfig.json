{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "preserve",
    "baseUrl": "./",
    "outDir": "ts-build",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "*": ["src/@types/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "containers/*": ["src/containers/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"],
      "views/*": ["src/views/*"],
      "services/*": ["src/services/*"],
      "ui": ["src/ui"],
      "scss/*": ["src/scss/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types/*"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
